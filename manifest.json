{
    "manifest_version": 3,
    "name": "YouTube Fullscreen Manager",
    "description": "Move o v√≠deo ativo do YouTube para uma segunda tela em modo de tela cheia.",
    "version": "1.0",
    "permissions": [
      "tabs",
      "windows",
      "scripting",
      "system.display",
      "storage"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content/content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["fullscreen/*"],
        "matches": ["https://www.youtube.com/*",
                    "chrome-extension://cdcpfpehljlmlolfpjoipffpkljnckfd/*"
                   ]
      }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
      },
    "host_permissions": [
        "https://www.youtube.com/*"                
      ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "author": "Eudes Justino"
  }
  